<h1>Your Accounts</h1>

<table>
  <tr>
    <th style="text-align: left;">Account</th>
    <th style="text-align: left;">Balance</th>
    <th></th>
    <th></th>
  </tr>

<% current_user.accounts.each do |account| %>
  <tr>
    <td><%= link_to "#{account.name}", account_path(account) %></td>
    
    <% if account.balance < 0%>
    <td style="color: red;"><%= account.balance_string %></td>
    <% else %>
    <td><%= account.balance_string %></td>
    <% end %>
    
    <td><%= link_to "Record Deposit", "/accounts/#{account.id}/deposit" %></td>
    <td><%= link_to "Record Withdraw", "/accounts/#{account.id}/withdraw" %></td>
    
  </tr>
<% end %>
</table>
