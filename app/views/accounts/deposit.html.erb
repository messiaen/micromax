<h3>Record Withdraw from <%= @account.name %></h3>

<%= form_for @transaction, :url => "/accounts/#{@account.id}/make_deposit" do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% elsif flash[:notice] %>
    <div id="notice">
      <h4><%= flash[:notice] %></h4>
    </div>
  <% elsif flash[:error] %>
    <div id="error" style="color: red;">
      <h4><%= flash[:error] %></h4>
    </div>
  <% end %>

  <table>
  	<tr>
  	  <td>
  	    <div class="field">
          <%= f.label :date %><br />
          <%= f.text_field :date, :class => "date_popup" %>
        </div>
      </td>
  	  <td>
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_field :description %>
        </div>
      </td>
      <td>
        <div class="field">
    	  <%= f.label :amount %><br />
    	  $<%= f.number_field :amount %>
  		</div>
  	  </td>
    </tr>

    <tr>  
      <td colspan="2" align="right">
        <div class="field">
          <%= f.label :category %>
          <%= f.collection_select :category_id, Category.where(:kind => @transaction.type), :id, :name %>
        </div>
      </td>
      <td align="right">
        <div class="actions">
          <%= f.submit "Record Deposit" %>
        </div>
      </td>
    </tr>
  </table>
<% end %>

