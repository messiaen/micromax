<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.username %></td>
    <td><%= link_to 'Delete', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Person', new_person_path %>
