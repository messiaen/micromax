<h1>Administration</h1>

<% if flash[:error] %>

	<div id="error" style="color: red;">
		<%= flash[:error] %>
	</div>

<% elsif flash[:notice] %>
	<div id="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<table>
	<tr>
		<td><%= link_to "Add a New Bank Account", new_bank_account_path %></td>
	</tr>
	<tr>
		<td><%= link_to "Add a New Credit Card", new_credit_card_account_path %></td>
	</tr>
	<tr>
		<td><%= link_to "Add a New Cash Account", new_cash_account_path %></td>
	</tr>
	<tr>
		<td><%= link_to "Add a New User", new_person_path %></td>
	</tr>
	
	<%= render :partial => "edit_account.html" %>
	
</table>
