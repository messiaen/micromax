			<tr>
				<td><%= transaction.date.strftime("%b %d %Y") %></td>
				<td><%= transaction.description %></td>
				
				<% if transaction.amount < 0 %>
				  <td style="color: red; text-align: right;"><%= sprintf("-$%0.2f", transaction.amount * -1) %></td>
				<% else %>
					<td style="text-align: right;"><%= sprintf("$%0.2f", transaction.amount) %></td>
				<% end %>
				
				<%= yield :account_field %>
				
				<td><%= transaction.category.name %></td>
				<td><%= transaction.person ? transaction.person.name : "" %></td>
			</tr>