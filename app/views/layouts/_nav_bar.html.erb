			<td><%= image_tag "budgie_diagram.png", :size => "40x40" %></td>
			<% end %>
			<td>
				<table>
					<tr>
						<% if current_user %>
							<td colspan="6"><b>
								<%= "Logged in as #{current_user.username}" %></b>
